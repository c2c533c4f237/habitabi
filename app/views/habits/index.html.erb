<h1>Listing habits</h1>

<table class="table">
  <thead>
    <tr>
      <th>Type</th>
      <th>Action</th>
      <th>Object</th>
      <th>Count</th>
      <th>Measurement</th>
      <th>Measurement type</th>
      <th>Quantity</th>
      <th>Quantity type</th>
      <th>Tags</th>
      <th>Description</th>
      <th>Time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @habits.each do |habit| %>
      <tr>
        <td><%= habit.habit_type %></td>
        <td><%= habit.action %></td>
        <td><%= habit.object %></td>
        <td><%= habit.count %></td>
        <td><%= habit.measurement %></td>
        <td><%= habit.measurement_type %></td>
        <td><%= habit.quantity %></td>
        <td><%= habit.quantity_type %></td>
        <td><%= habit.tags %></td>
        <td><%= habit.description %></td>
        <td><%= habit.time %></td>
        <td><%= link_to 'Show', habit %></td>
        <td><%= link_to 'Edit', edit_habit_path(habit) %></td>
        <td><%= link_to 'Destroy', habit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

